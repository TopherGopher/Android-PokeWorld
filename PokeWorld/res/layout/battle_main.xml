<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/opponent_poke_img"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_x="171dp"
        android:layout_y="32dp"
        android:contentDescription="Pikachu"
        android:src="@drawable/ic_launcher" />


    <Button
        android:id="@+id/run_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="365dp"
        android:onClick="runButtonClickListener"
        android:text="RUN AWAY!" />

    <Button
        android:id="@+id/fight_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="317dp"
        android:onClick="fightButtonClickListener"
        android:text="Fight!" />

    <ProgressBar
        android:id="@+id/opp_hp_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_x="156dp"
        android:layout_y="140dp" />

    <ImageView
        android:id="@+id/user_poke_img"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_x="28dp"
        android:layout_y="155dp"
        android:contentDescription="Pikachu"
        android:src="@drawable/ic_launcher" />

    <ProgressBar
        android:id="@+id/user_hp_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_x="10dp"
        android:layout_y="243dp" />


    <TextView
        android:id="@+id/battle_feedback"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="426dp"
        android:textColor="#ff0000"
        android:text="TextView" />


    <Button
        android:id="@+id/attack1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="304dp"
        android:text="Attack 1"
        android:visibility="invisible" 
        android:onClick="attackButtonClickListener"
        android:contentDescription="1"
        />

    <Button
        android:id="@+id/attack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="170dp"
        android:layout_y="304dp"
        android:text="Attack 2"
        android:visibility="invisible" 
        android:onClick="attackButtonClickListener"
        android:contentDescription="2"
        />

    <Button
        android:id="@+id/attack3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="33dp"
        android:layout_y="355dp"
        android:text="Attack 3"
        android:visibility="invisible" 
        android:onClick="attackButtonClickListener"
        android:contentDescription="3"
        />

    <Button
        android:id="@+id/attack4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="170dp"
        android:layout_y="354dp"
        android:text="Attack 4" 
        android:visibility="invisible"
        android:onClick="attackButtonClickListener"
        android:contentDescription="4"
        />
    
    

</AbsoluteLayout>